<UserControl x:Class="Memory_Game.View.GameView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:Memory_Game.View"
             xmlns:viewModel="clr-namespace:Memory_Game.ViewModel"
             mc:Ignorable="d"
             d:DesignHeight="700"
             d:DesignWidth="1000">

    <UserControl.Resources>
        <!-- BooleanToVisibilityConverter -->
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>

        <!-- Modern Menu Styles -->
        <Style x:Key="ModernMenuItem"
               TargetType="MenuItem">
            <Setter Property="Background"
                    Value="Transparent"/>
            <Setter Property="Foreground"
                    Value="#FFE0E0E0"/>
            <Setter Property="Padding"
                    Value="15,8"/>
            <Setter Property="FontSize"
                    Value="14"/>
            <Setter Property="FontWeight"
                    Value="SemiBold"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver"
                         Value="True">
                    <Setter Property="Foreground"
                            Value="White"/>
                    <Setter Property="Background"
                            Value="#FF007ACC"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="SubMenuItem"
               TargetType="MenuItem"
               BasedOn="{StaticResource ModernMenuItem}">
            <Setter Property="Padding"
                    Value="15,8"/>
            <Setter Property="FontSize"
                    Value="13"/>
            <Setter Property="FontWeight"
                    Value="Normal"/>
            <Setter Property="Background"
                    Value="#FF2D2D2D"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver"
                         Value="True">
                    <Setter Property="Foreground"
                            Value="White"/>
                    <Setter Property="Background"
                            Value="#FF007ACC"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Card Button Style -->
        <Style x:Key="CardButton"
               TargetType="Button">
            <Setter Property="Width"
                    Value="120"/>
            <Setter Property="Height"
                    Value="120"/>
            <Setter Property="Margin"
                    Value="5"/>
            <Setter Property="Background"
                    Value="#FF2D2D2D"/>
            <Setter Property="BorderBrush"
                    Value="#FF007ACC"/>
            <Setter Property="BorderThickness"
                    Value="1"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="5">
                            <Border.Effect>
                                <DropShadowEffect BlurRadius="5"
                                                  ShadowDepth="2"
                                                  Opacity="0.3"/>
                            </Border.Effect>
                            <ContentPresenter HorizontalAlignment="Center"
                                              VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver"
                         Value="True">
                    <Setter Property="BorderBrush"
                            Value="#FF00BFFF"/>
                    <Setter Property="BorderThickness"
                            Value="2"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Timer Style -->
        <Style x:Key="TimerText"
               TargetType="TextBlock">
            <Setter Property="FontSize"
                    Value="24"/>
            <Setter Property="Foreground"
                    Value="White"/>
            <Setter Property="FontWeight"
                    Value="Bold"/>
            <Setter Property="HorizontalAlignment"
                    Value="Center"/>
            <Setter Property="VerticalAlignment"
                    Value="Center"/>
        </Style>

        <!-- Default Card Image -->
        <DrawingImage x:Key="DefaultCardImage">
            <DrawingImage.Drawing>
                <GeometryDrawing>
                    <GeometryDrawing.Geometry>
                        <RectangleGeometry Rect="0,0,100,100"/>
                    </GeometryDrawing.Geometry>
                    <GeometryDrawing.Brush>
                        <VisualBrush>
                            <VisualBrush.Visual>
                                <TextBlock Text="?"
                                           FontSize="36"
                                           FontWeight="Bold"
                                           Foreground="White"
                                           HorizontalAlignment="Center"
                                           VerticalAlignment="Center"/>
                            </VisualBrush.Visual>
                        </VisualBrush>
                    </GeometryDrawing.Brush>
                </GeometryDrawing>
            </DrawingImage.Drawing>
        </DrawingImage>

        <!-- Card Content Template -->
        <DataTemplate x:Key="CardContentTemplate">
            <Button Style="{StaticResource CardButton}"
                    Command="{Binding DataContext.CardClickCommand, 
                              RelativeSource={RelativeSource AncestorType=ItemsControl}}"
                    CommandParameter="{Binding}">
                <Grid Width="120"
                      Height="120">
                    <!-- Back of Card -->
                    <Border Background="#FF007ACC"
                            CornerRadius="5"
                            Visibility="{Binding IsFlipped, Converter={StaticResource BooleanToVisibilityConverter}, ConverterParameter=inverse}">
                        <TextBlock Text="?"
                                   FontSize="36"
                                   FontWeight="Bold"
                                   Foreground="White"
                                   HorizontalAlignment="Center"
                                   VerticalAlignment="Center"/>
                    </Border>

                    <!-- Front of Card -->
                    <Border Background="#FF2D2D2D"
                            CornerRadius="5"
                            Visibility="{Binding IsFlipped, Converter={StaticResource BooleanToVisibilityConverter}}">
                        <Grid>
                            <Image Width="100"
                                   Height="100"
                                   RenderOptions.BitmapScalingMode="HighQuality"
                                   Stretch="Uniform"
                                   HorizontalAlignment="Center"
                                   VerticalAlignment="Center"
                                   Source="{Binding ImagePath, TargetNullValue={StaticResource DefaultCardImage}}"/>
                        </Grid>
                    </Border>

                    <Grid.Style>
                        <Style TargetType="Grid">
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding IsFlipped}"
                                             Value="True">
                                    <Setter Property="RenderTransform">
                                        <Setter.Value>
                                            <ScaleTransform ScaleX="-1"
                                                            ScaleY="1"
                                                            CenterX="60"
                                                            CenterY="60"/>
                                        </Setter.Value>
                                    </Setter>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </Grid.Style>
                </Grid>
            </Button>
        </DataTemplate>

        <!-- TimeSpan to Minutes:Seconds Converter -->
        <local:TimeSpanToMinutesSecondsConverter x:Key="TimeSpanToMinutesSecondsConverter"/>
    </UserControl.Resources>

    <Grid>
        <Grid.Background>
            <LinearGradientBrush StartPoint="0,0"
                                 EndPoint="1,1">
                <GradientStop Color="#FF1E1E1E"
                              Offset="0"/>
                <GradientStop Color="#FF2D2D2D"
                              Offset="1"/>
            </LinearGradientBrush>
        </Grid.Background>

        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Menu -->
        <Menu Grid.Row="0"
              Background="#FF1E1E1E"
              Padding="10,0">
            <MenuItem Header="Game"
                      Style="{StaticResource ModernMenuItem}">
                <MenuItem Header="New Game"
                          Command="{Binding NewGameCommand}"
                          Style="{StaticResource SubMenuItem}"/>
                <MenuItem Header="Save Game"
                          Command="{Binding SaveGameCommand}"
                          Style="{StaticResource SubMenuItem}"/>
                <MenuItem Header="Load Game"
                          Command="{Binding LoadGameCommand}"
                          Style="{StaticResource SubMenuItem}"/>
                <Separator Background="#FF007ACC"
                           Margin="0,5"/>
                <MenuItem Header="Exit"
                          Command="{Binding ExitCommand}"
                          Style="{StaticResource SubMenuItem}"/>
            </MenuItem>

            <MenuItem Header="Categories"
                      Style="{StaticResource ModernMenuItem}">
                <MenuItem Header="Animals"
                          Command="{Binding SelectCategoryCommand}"
                          CommandParameter="Animals"
                          Style="{StaticResource SubMenuItem}"/>
                <MenuItem Header="Fruits"
                          Command="{Binding SelectCategoryCommand}"
                          CommandParameter="Fruits"
                          Style="{StaticResource SubMenuItem}"/>
                <MenuItem Header="Vehicles"
                          Command="{Binding SelectCategoryCommand}"
                          CommandParameter="Vehicles"
                          Style="{StaticResource SubMenuItem}"/>
                <MenuItem Header="Sports"
                          Command="{Binding SelectCategoryCommand}"
                          CommandParameter="Sports"
                          Style="{StaticResource SubMenuItem}"/>
            </MenuItem>

            <MenuItem Header="Board Size"
                      Style="{StaticResource ModernMenuItem}">
                <MenuItem Header="Standard (4x4)"
                          Command="{Binding SetBoardSizeCommand}"
                          CommandParameter="Standard"
                          Style="{StaticResource SubMenuItem}"/>
                <MenuItem Header="Custom"
                          Command="{Binding SetBoardSizeCommand}"
                          CommandParameter="Custom"
                          Style="{StaticResource SubMenuItem}"/>
            </MenuItem>

            <MenuItem Header="Help"
                      Style="{StaticResource ModernMenuItem}">
                <MenuItem Header="Statistics"
                          Command="{Binding ShowStatisticsCommand}"
                          Style="{StaticResource SubMenuItem}"/>
                <MenuItem Header="About"
                          Command="{Binding ShowAboutCommand}"
                          Style="{StaticResource SubMenuItem}"/>
            </MenuItem>
        </Menu>

        <!-- Game Info Panel -->
        <Grid Grid.Row="1"
              Margin="10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Player Info -->
            <StackPanel Grid.Column="0"
                        Orientation="Horizontal">
                <Image Source="{Binding CurrentPlayer.ImagePath}"
                       Width="40"
                       Height="40"
                       Margin="5"/>
                <TextBlock Text="{Binding CurrentPlayer.Username}"
                           Foreground="White"
                           VerticalAlignment="Center"
                           FontSize="18"/>
            </StackPanel>

            <!-- Timer -->
            <TextBlock Grid.Column="1"
                       Style="{StaticResource TimerText}"
                       Text="{Binding RemainingTime, Converter={StaticResource TimeSpanToMinutesSecondsConverter}}"/>

            <!-- Game Stats -->
            <StackPanel Grid.Column="2"
                        Orientation="Horizontal"
                        HorizontalAlignment="Right">
                <TextBlock Text="Moves: "
                           Foreground="White"
                           FontSize="18"
                           VerticalAlignment="Center"/>
                <TextBlock Text="{Binding Moves}"
                           Foreground="White"
                           FontSize="18"
                           FontWeight="Bold"
                           VerticalAlignment="Center"
                           Margin="0,0,20,0"/>
                <TextBlock Text="Matches: "
                           Foreground="White"
                           FontSize="18"
                           VerticalAlignment="Center"/>
                <TextBlock Text="{Binding Matches}"
                           Foreground="White"
                           FontSize="18"
                           FontWeight="Bold"
                           VerticalAlignment="Center"/>
            </StackPanel>
        </Grid>

        <!-- Game Board -->
        <Border Grid.Row="2"
                Margin="20"
                Background="#FF1E1E1E"
                BorderBrush="#FF007ACC"
                BorderThickness="1"
                CornerRadius="10">
            <Border.Effect>
                <DropShadowEffect BlurRadius="10"
                                  ShadowDepth="0"
                                  Color="#FF007ACC"
                                  Opacity="0.3"/>
            </Border.Effect>

            <ItemsControl ItemsSource="{Binding CurrentGame.Cards}"
                          Margin="15">
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <UniformGrid Rows="{Binding CurrentGame.BoardHeight}"
                                     Columns="{Binding CurrentGame.BoardWidth}"/>
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>

                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <ContentControl Content="{Binding}"
                                        ContentTemplate="{StaticResource CardContentTemplate}">
                            <ContentControl.RenderTransformOrigin>
                                <Point X="0.5"
                                       Y="0.5"/>
                            </ContentControl.RenderTransformOrigin>
                        </ContentControl>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </Border>
    </Grid>
</UserControl>