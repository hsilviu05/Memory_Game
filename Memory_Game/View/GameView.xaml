<UserControl x:Class="Memory_Game.View.GameView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:Memory_Game.View"
             xmlns:viewModel="clr-namespace:Memory_Game.ViewModel"
             mc:Ignorable="d"
             d:DesignHeight="700"
             d:DesignWidth="1000">

    <UserControl.Resources>
        <!-- BooleanToVisibilityConverter -->
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>

        <!-- Modern Menu Styles -->
        <Style x:Key="ModernMenuItem"
               TargetType="MenuItem">
            <Setter Property="Background"
                    Value="Transparent"/>
            <Setter Property="Foreground"
                    Value="#FFE0E0E0"/>
            <Setter Property="Padding"
                    Value="15,8"/>
            <Setter Property="FontSize"
                    Value="14"/>
            <Setter Property="FontWeight"
                    Value="SemiBold"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver"
                         Value="True">
                    <Setter Property="Foreground"
                            Value="White"/>
                    <Setter Property="Background">
                        <Setter.Value>
                            <LinearGradientBrush StartPoint="0,0"
                                                 EndPoint="1,1">
                                <GradientStop Color="#FF9BE8"
                                              Offset="0"/>
                                <GradientStop Color="#7B68EE"
                                              Offset="1"/>
                            </LinearGradientBrush>
                        </Setter.Value>
                    </Setter>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="SubMenuItem"
               TargetType="MenuItem"
               BasedOn="{StaticResource ModernMenuItem}">
            <Setter Property="Padding"
                    Value="15,8"/>
            <Setter Property="FontSize"
                    Value="13"/>
            <Setter Property="FontWeight"
                    Value="Normal"/>
            <Setter Property="Background"
                    Value="#FF2D2D2D"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver"
                         Value="True">
                    <Setter Property="Foreground"
                            Value="White"/>
                    <Setter Property="Background">
                        <Setter.Value>
                            <LinearGradientBrush StartPoint="0,0"
                                                 EndPoint="1,1">
                                <GradientStop Color="#FF9BE8"
                                              Offset="0"/>
                                <GradientStop Color="#7B68EE"
                                              Offset="1"/>
                            </LinearGradientBrush>
                        </Setter.Value>
                    </Setter>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Card Button Style -->
        <Style x:Key="CardButton"
               TargetType="Button">
            <Setter Property="Width"
                    Value="120"/>
            <Setter Property="Height"
                    Value="120"/>
            <Setter Property="Margin"
                    Value="5"/>
            <Setter Property="Background"
                    Value="#FF2D2D2D"/>
            <Setter Property="BorderBrush">
                <Setter.Value>
                    <LinearGradientBrush StartPoint="0,0"
                                         EndPoint="1,1">
                        <GradientStop Color="#FF9BE8"
                                      Offset="0"/>
                        <GradientStop Color="#7B68EE"
                                      Offset="1"/>
                    </LinearGradientBrush>
                </Setter.Value>
            </Setter>
            <Setter Property="BorderThickness"
                    Value="2"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="10">
                            <Border.Effect>
                                <DropShadowEffect BlurRadius="10"
                                                  ShadowDepth="2"
                                                  Color="#7B68EE"
                                                  Opacity="0.3"/>
                            </Border.Effect>
                            <ContentPresenter HorizontalAlignment="Center"
                                              VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver"
                         Value="True">
                    <Setter Property="BorderBrush">
                        <Setter.Value>
                            <LinearGradientBrush StartPoint="0,0"
                                                 EndPoint="1,1">
                                <GradientStop Color="#7B68EE"
                                              Offset="0"/>
                                <GradientStop Color="#FF9BE8"
                                              Offset="1"/>
                            </LinearGradientBrush>
                        </Setter.Value>
                    </Setter>
                    <Setter Property="BorderThickness"
                            Value="3"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Timer Style -->
        <Style x:Key="TimerText"
               TargetType="TextBlock">
            <Setter Property="FontSize"
                    Value="24"/>
            <Setter Property="Foreground">
                <Setter.Value>
                    <LinearGradientBrush StartPoint="0,0"
                                         EndPoint="1,1">
                        <GradientStop Color="#FF9BE8"
                                      Offset="0"/>
                        <GradientStop Color="#7B68EE"
                                      Offset="1"/>
                    </LinearGradientBrush>
                </Setter.Value>
            </Setter>
            <Setter Property="FontWeight"
                    Value="Bold"/>
            <Setter Property="HorizontalAlignment"
                    Value="Center"/>
            <Setter Property="VerticalAlignment"
                    Value="Center"/>
        </Style>

        <!-- Default Card Image -->
        <DrawingImage x:Key="DefaultCardImage">
            <DrawingImage.Drawing>
                <GeometryDrawing>
                    <GeometryDrawing.Geometry>
                        <RectangleGeometry Rect="0,0,100,100"/>
                    </GeometryDrawing.Geometry>
                    <GeometryDrawing.Brush>
                        <VisualBrush>
                            <VisualBrush.Visual>
                                <TextBlock Text="?"
                                           FontSize="36"
                                           FontWeight="Bold"
                                           Foreground="White"
                                           HorizontalAlignment="Center"
                                           VerticalAlignment="Center"/>
                            </VisualBrush.Visual>
                        </VisualBrush>
                    </GeometryDrawing.Brush>
                </GeometryDrawing>
            </DrawingImage.Drawing>
        </DrawingImage>

        <!-- Card Content Template -->
        <DataTemplate x:Key="CardContentTemplate">
            <Button Style="{StaticResource CardButton}"
                    Command="{Binding DataContext.CardClickCommand, 
                              RelativeSource={RelativeSource AncestorType=ItemsControl}}"
                    CommandParameter="{Binding}">
                <Grid Width="120"
                      Height="120">
                    <!-- Back of Card -->
                    <Border Background="#FF007ACC"
                            CornerRadius="5"
                            Visibility="{Binding IsFlipped, Converter={StaticResource BooleanToVisibilityConverter}, ConverterParameter=inverse}">
                        <TextBlock Text="?"
                                   FontSize="36"
                                   FontWeight="Bold"
                                   Foreground="White"
                                   HorizontalAlignment="Center"
                                   VerticalAlignment="Center"/>
                    </Border>

                    <!-- Front of Card -->
                    <Border Background="#FF2D2D2D"
                            CornerRadius="5"
                            Visibility="{Binding IsFlipped, Converter={StaticResource BooleanToVisibilityConverter}}">
                        <Viewbox Stretch="Uniform"
                                 Margin="15"
                                 Width="90"
                                 Height="90"
                                 HorizontalAlignment="Center"
                                 VerticalAlignment="Center">
                            <Image Source="{Binding ImagePath, TargetNullValue={StaticResource DefaultCardImage}}"
                                   RenderOptions.BitmapScalingMode="HighQuality"
                                   Stretch="Uniform"/>
                        </Viewbox>
                    </Border>

                    <Grid.Style>
                        <Style TargetType="Grid">
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding IsFlipped}"
                                             Value="True">
                                    <Setter Property="RenderTransform">
                                        <Setter.Value>
                                            <ScaleTransform ScaleX="1"
                                                            ScaleY="1"
                                                            CenterX="60"
                                                            CenterY="60"/>
                                        </Setter.Value>
                                    </Setter>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </Grid.Style>
                </Grid>
            </Button>
        </DataTemplate>

        <!-- TimeSpan to Minutes:Seconds Converter -->
        <local:TimeSpanToMinutesSecondsConverter x:Key="TimeSpanToMinutesSecondsConverter"/>
    </UserControl.Resources>

    <Grid>
        <Grid.Background>
            <LinearGradientBrush StartPoint="0,0"
                                 EndPoint="1,1">
                <GradientStop Color="#1A1A1A"
                              Offset="0"/>
                <GradientStop Color="#2D2D2D"
                              Offset="1"/>
            </LinearGradientBrush>
        </Grid.Background>

        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Menu -->
        <Menu Grid.Row="0"
              Background="#1A1A1A"
              Padding="10,0">
            <MenuItem Header="Game"
                      Style="{StaticResource ModernMenuItem}">
                <MenuItem Header="New Game"
                          Command="{Binding NewGameCommand}"
                          Style="{StaticResource SubMenuItem}"/>
                <MenuItem Header="Save Game"
                          Command="{Binding SaveGameCommand}"
                          Style="{StaticResource SubMenuItem}"/>
                <MenuItem Header="Load Game"
                          Command="{Binding LoadGameCommand}"
                          Style="{StaticResource SubMenuItem}"/>
                <MenuItem Header="Board Size"
                          Command="{Binding SetBoardSizeCommand}"
                          Style="{StaticResource SubMenuItem}"/>
                <MenuItem Header="Manage Categories"
                          Command="{Binding ManageCategoriesCommand}"
                          Style="{StaticResource SubMenuItem}"/>
                <Separator/>
                <MenuItem Header="Exit"
                          Command="{Binding ExitCommand}"
                          Style="{StaticResource SubMenuItem}"/>
            </MenuItem>

            <MenuItem Header="Categories"
                      Style="{StaticResource ModernMenuItem}">
                <MenuItem.ItemsSource>
                    <Binding Path="Categories"/>
                </MenuItem.ItemsSource>
                <MenuItem.ItemTemplate>
                    <DataTemplate>
                        <MenuItem Header="{Binding Name}"
                                  Command="{Binding DataContext.SelectCategoryCommand, 
                                            RelativeSource={RelativeSource AncestorType=UserControl}}"
                                  CommandParameter="{Binding Name}"
                                  Style="{StaticResource SubMenuItem}"/>
                    </DataTemplate>
                </MenuItem.ItemTemplate>
            </MenuItem>

            <MenuItem Header="Help"
                      Style="{StaticResource ModernMenuItem}">
                <MenuItem Header="Statistics"
                          Command="{Binding ShowStatisticsCommand}"
                          Style="{StaticResource SubMenuItem}"/>
                <MenuItem Header="About"
                          Command="{Binding ShowAboutCommand}"
                          Style="{StaticResource SubMenuItem}"/>
            </MenuItem>
        </Menu>

        <!-- Game Info Panel -->
        <Grid Grid.Row="1"
              Margin="10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Player Info -->
            <StackPanel Grid.Column="0"
                        Orientation="Horizontal">
                <Image Source="{Binding CurrentPlayer.ImagePath}"
                       Width="40"
                       Height="40"
                       Margin="5"/>
                <TextBlock Text="{Binding CurrentPlayer.Username}"
                           Foreground="White"
                           VerticalAlignment="Center"
                           FontSize="18"/>
            </StackPanel>

            <!-- Timer -->
            <TextBlock Grid.Column="1"
                       Style="{StaticResource TimerText}"
                       Text="{Binding RemainingTime, Converter={StaticResource TimeSpanToMinutesSecondsConverter}}"
                       Margin="0,0,15,0"/>

            <!-- Pause/Resume Button -->
            <Button Grid.Column="2"
                    Width="40"
                    Height="40"
                    Margin="0,0,15,0"
                    Background="Transparent"
                    BorderBrush="#007ACC"
                    BorderThickness="2"
                    Command="{Binding PauseGameCommand}"
                    Visibility="{Binding IsGameActive, Converter={StaticResource BooleanToVisibilityConverter}}">
                <Button.Style>
                    <Style TargetType="Button">
                        <Style.Triggers>
                            <Trigger Property="IsMouseOver"
                                     Value="True">
                                <Setter Property="Background"
                                        Value="#3F007ACC"/>
                            </Trigger>
                            <DataTrigger Binding="{Binding IsGamePaused}"
                                         Value="True">
                                <Setter Property="Command"
                                        Value="{Binding ResumeGameCommand}"/>
                                <Setter Property="Content">
                                    <Setter.Value>
                                        <Path Data="M5,5 L15,12 L5,19 Z"
                                              Fill="White"
                                              Stretch="Uniform"
                                              Margin="3,0,0,0"/>
                                    </Setter.Value>
                                </Setter>
                            </DataTrigger>
                            <DataTrigger Binding="{Binding IsGamePaused}"
                                         Value="False">
                                <Setter Property="Command"
                                        Value="{Binding PauseGameCommand}"/>
                                <Setter Property="Content">
                                    <Setter.Value>
                                        <StackPanel Orientation="Horizontal"
                                                    HorizontalAlignment="Center">
                                            <Rectangle Width="4"
                                                       Height="15"
                                                       Fill="White"
                                                       Margin="0,0,4,0"/>
                                            <Rectangle Width="4"
                                                       Height="15"
                                                       Fill="White"/>
                                        </StackPanel>
                                    </Setter.Value>
                                </Setter>
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </Button.Style>
            </Button>

            <!-- Game Stats -->
            <StackPanel Grid.Column="3"
                        Orientation="Horizontal"
                        HorizontalAlignment="Right">
                <TextBlock Text="Moves: "
                           Foreground="#FF9BE8"
                           FontSize="18"
                           VerticalAlignment="Center"/>
                <TextBlock Text="{Binding Moves}"
                           Foreground="#7B68EE"
                           FontSize="18"
                           FontWeight="Bold"
                           VerticalAlignment="Center"
                           Margin="0,0,20,0"/>
                <TextBlock Text="Matches: "
                           Foreground="#FF9BE8"
                           FontSize="18"
                           VerticalAlignment="Center"/>
                <TextBlock Text="{Binding Matches}"
                           Foreground="#7B68EE"
                           FontSize="18"
                           FontWeight="Bold"
                           VerticalAlignment="Center"/>
            </StackPanel>
        </Grid>

        <!-- Game Board -->
        <Border Grid.Row="2"
                Margin="20,10,20,20"
                Background="#1A1A1A"
                BorderThickness="2"
                CornerRadius="15">
            <Border.BorderBrush>
                <LinearGradientBrush StartPoint="0,0"
                                     EndPoint="1,1">
                    <GradientStop Color="#FF9BE8"
                                  Offset="0"/>
                    <GradientStop Color="#7B68EE"
                                  Offset="1"/>
                </LinearGradientBrush>
            </Border.BorderBrush>
            <Border.Effect>
                <DropShadowEffect BlurRadius="15"
                                  ShadowDepth="0"
                                  Color="#7B68EE"
                                  Opacity="0.3"/>
            </Border.Effect>

            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <Viewbox Stretch="Uniform"
                         Margin="20">
                    <ItemsControl ItemsSource="{Binding CurrentGame.Cards}"
                                  Width="600"
                                  Height="600">
                        <ItemsControl.ItemsPanel>
                            <ItemsPanelTemplate>
                                <UniformGrid Rows="{Binding CurrentGame.BoardHeight}"
                                             Columns="{Binding CurrentGame.BoardWidth}"/>
                            </ItemsPanelTemplate>
                        </ItemsControl.ItemsPanel>

                        <ItemsControl.ItemContainerStyle>
                            <Style TargetType="ContentPresenter">
                                <Setter Property="Margin"
                                        Value="5"/>
                            </Style>
                        </ItemsControl.ItemContainerStyle>

                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Button Style="{StaticResource CardButton}"
                                        Command="{Binding DataContext.CardClickCommand, 
                                                  RelativeSource={RelativeSource AncestorType=ItemsControl}}"
                                        CommandParameter="{Binding}">
                                    <Grid Width="120"
                                          Height="120">
                                        <!-- Back of Card -->
                                        <Border Background="#FF007ACC"
                                                CornerRadius="5"
                                                Visibility="{Binding IsFlipped, Converter={StaticResource BooleanToVisibilityConverter}, ConverterParameter=inverse}">
                                            <TextBlock Text="?"
                                                       FontSize="36"
                                                       FontWeight="Bold"
                                                       Foreground="White"
                                                       HorizontalAlignment="Center"
                                                       VerticalAlignment="Center"/>
                                        </Border>

                                        <!-- Front of Card -->
                                        <Border Background="#FF2D2D2D"
                                                CornerRadius="5"
                                                Visibility="{Binding IsFlipped, Converter={StaticResource BooleanToVisibilityConverter}}">
                                            <Viewbox Stretch="Uniform"
                                                     Margin="15"
                                                     Width="90"
                                                     Height="90"
                                                     HorizontalAlignment="Center"
                                                     VerticalAlignment="Center">
                                                <Image Source="{Binding ImagePath, TargetNullValue={StaticResource DefaultCardImage}}"
                                                       RenderOptions.BitmapScalingMode="HighQuality"
                                                       Stretch="Uniform"/>
                                            </Viewbox>
                                        </Border>

                                        <Grid.Style>
                                            <Style TargetType="Grid">
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding IsFlipped}"
                                                                 Value="True">
                                                        <Setter Property="RenderTransform">
                                                            <Setter.Value>
                                                                <ScaleTransform ScaleX="1"
                                                                                ScaleY="1"
                                                                                CenterX="60"
                                                                                CenterY="60"/>
                                                            </Setter.Value>
                                                        </Setter>
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </Grid.Style>
                                    </Grid>
                                </Button>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </Viewbox>
            </Grid>
        </Border>

        <!-- Victory Screen Overlay -->
        <Grid Grid.RowSpan="3"
              Panel.ZIndex="1000"
              Visibility="{Binding CurrentGame.IsWon, Converter={StaticResource BooleanToVisibilityConverter}}">
            <Grid.Background>
                <ImageBrush ImageSource="/Memory_Game;component/Resources/victory.png"
                            Stretch="UniformToFill"/>
            </Grid.Background>

            <!-- Buttons -->
            <StackPanel Orientation="Horizontal"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Bottom"
                        Margin="0,0,0,20">
                <Button Content="Play Again"
                        Command="{Binding NewGameCommand}"
                        Width="250"
                        Height="60"
                        FontSize="24"
                        FontWeight="Bold">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Background">
                                <Setter.Value>
                                    <LinearGradientBrush StartPoint="0,0"
                                                         EndPoint="1,1">
                                        <GradientStop Color="#FF9BE8"
                                                      Offset="0"/>
                                        <GradientStop Color="#7B68EE"
                                                      Offset="1"/>
                                    </LinearGradientBrush>
                                </Setter.Value>
                            </Setter>
                            <Setter Property="Foreground"
                                    Value="White"/>
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="Button">
                                        <Border Background="{TemplateBinding Background}"
                                                CornerRadius="30"
                                                BorderThickness="0">
                                            <Border.Effect>
                                                <DropShadowEffect BlurRadius="10"
                                                                  ShadowDepth="2"
                                                                  Color="#7B68EE"
                                                                  Opacity="0.5"/>
                                            </Border.Effect>
                                            <ContentPresenter HorizontalAlignment="Center"
                                                              VerticalAlignment="Center"/>
                                        </Border>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver"
                                         Value="True">
                                    <Setter Property="Background">
                                        <Setter.Value>
                                            <LinearGradientBrush StartPoint="0,0"
                                                                 EndPoint="1,1">
                                                <GradientStop Color="#7B68EE"
                                                              Offset="0"/>
                                                <GradientStop Color="#FF9BE8"
                                                              Offset="1"/>
                                            </LinearGradientBrush>
                                        </Setter.Value>
                                    </Setter>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                </Button>
            </StackPanel>
        </Grid>
    </Grid>
</UserControl>