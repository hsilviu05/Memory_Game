<?xml version="1.0" encoding="utf-8"?>
<UserControl x:Class="Memory_Game.View.LoginView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:Memory_Game.View"
             xmlns:viewModel="clr-namespace:Memory_Game.ViewModel"
             xmlns:converters="clr-namespace:Memory_Game.Converters"
             mc:Ignorable="d"
             d:DesignHeight="700"
             d:DesignWidth="1000">

    <UserControl.DataContext>
        <viewModel:LoginViewModel/>
    </UserControl.DataContext>

    <UserControl.Resources>
        <!-- Image Converter -->
        <converters:ImagePathConverter x:Key="ImagePathConverter"/>

        <!-- Modern Button Style -->
        <Style x:Key="ModernButton"
               TargetType="Button">
            <Setter Property="Background"
                    Value="#FF007ACC"/>
            <Setter Property="Foreground"
                    Value="White"/>
            <Setter Property="Padding"
                    Value="20,10"/>
            <Setter Property="Margin"
                    Value="5"/>
            <Setter Property="BorderThickness"
                    Value="0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="5">
                            <ContentPresenter HorizontalAlignment="Center"
                                              VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver"
                         Value="True">
                    <Setter Property="Background"
                            Value="#FF5C2D91"/>
                </Trigger>
                <Trigger Property="IsEnabled"
                         Value="False">
                    <Setter Property="Background"
                            Value="#FF666666"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Modern TextBox Style -->
        <Style x:Key="ModernTextBox"
               TargetType="TextBox">
            <Setter Property="Background"
                    Value="#FF2D2D2D"/>
            <Setter Property="Foreground"
                    Value="White"/>
            <Setter Property="BorderThickness"
                    Value="0"/>
            <Setter Property="Padding"
                    Value="10,5"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="5"
                                BorderThickness="1"
                                BorderBrush="#FF007ACC">
                            <ScrollViewer x:Name="PART_ContentHost"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Modern ListBox Style -->
        <Style x:Key="ModernListBox"
               TargetType="ListBox">
            <Setter Property="Background"
                    Value="#FF2D2D2D"/>
            <Setter Property="BorderThickness"
                    Value="1"/>
            <Setter Property="BorderBrush"
                    Value="#FF007ACC"/>
            <Setter Property="Padding"
                    Value="5"/>
        </Style>

        <!-- Modern GroupBox Style -->
        <Style x:Key="ModernGroupBox"
               TargetType="GroupBox">
            <Setter Property="BorderBrush"
                    Value="#FF007ACC"/>
            <Setter Property="BorderThickness"
                    Value="1"/>
            <Setter Property="Padding"
                    Value="10"/>
            <Setter Property="HeaderTemplate">
                <Setter.Value>
                    <DataTemplate>
                        <TextBlock Text="{Binding}"
                                   Foreground="White"
                                   FontSize="16"
                                   FontWeight="Bold"
                                   Margin="5"/>
                    </DataTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </UserControl.Resources>

    <Grid>
        <Grid.Background>
            <LinearGradientBrush StartPoint="0,0"
                                 EndPoint="1,1">
                <GradientStop Color="#1A1A1A"
                              Offset="0"/>
                <GradientStop Color="#2D2D2D"
                              Offset="1"/>
            </LinearGradientBrush>
        </Grid.Background>

        <Grid Margin="20">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Title -->
            <TextBlock Text="MEMORY GAME"
                       FontSize="36"
                       FontWeight="Bold"
                       HorizontalAlignment="Center"
                       Margin="0,0,0,30">
                <TextBlock.Foreground>
                    <LinearGradientBrush StartPoint="0,0"
                                         EndPoint="1,1">
                        <GradientStop Color="#FF9BE8"
                                      Offset="0"/>
                        <GradientStop Color="#7B68EE"
                                      Offset="1"/>
                    </LinearGradientBrush>
                </TextBlock.Foreground>
                <TextBlock.Effect>
                    <DropShadowEffect BlurRadius="20"
                                      ShadowDepth="0"
                                      Color="#7B68EE"/>
                </TextBlock.Effect>
            </TextBlock>

            <!-- Main Content -->
            <Grid Grid.Row="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- Left Side - Existing Users -->
                <Border Background="#1A1A1A"
                        BorderThickness="2"
                        CornerRadius="20"
                        Margin="10">
                    <Border.BorderBrush>
                        <LinearGradientBrush StartPoint="0,0"
                                             EndPoint="1,1">
                            <GradientStop Color="#FF9BE8"
                                          Offset="0"/>
                            <GradientStop Color="#7B68EE"
                                          Offset="1"/>
                        </LinearGradientBrush>
                    </Border.BorderBrush>
                    <Border.Effect>
                        <DropShadowEffect BlurRadius="15"
                                          ShadowDepth="0"
                                          Color="#7B68EE"
                                          Opacity="0.3"/>
                    </Border.Effect>

                    <Grid Margin="20">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <TextBlock Text="SELECT USER"
                                   FontSize="24"
                                   FontWeight="Bold"
                                   HorizontalAlignment="Center"
                                   Margin="0,0,0,20">
                            <TextBlock.Foreground>
                                <LinearGradientBrush StartPoint="0,0"
                                                     EndPoint="1,1">
                                    <GradientStop Color="#FF9BE8"
                                                  Offset="0"/>
                                    <GradientStop Color="#7B68EE"
                                                  Offset="1"/>
                                </LinearGradientBrush>
                            </TextBlock.Foreground>
                        </TextBlock>

                        <!-- User List -->
                        <ListBox Grid.Row="1"
                                 ItemsSource="{Binding Users}"
                                 SelectedItem="{Binding SelectedUser}"
                                 Background="Transparent"
                                 BorderThickness="0"
                                 Margin="0,0,0,20">
                            <ListBox.ItemTemplate>
                                <DataTemplate>
                                    <Border Background="#2D2D2D"
                                            CornerRadius="10"
                                            Padding="15"
                                            Margin="0,5">
                                        <Border.Effect>
                                            <DropShadowEffect BlurRadius="5"
                                                              ShadowDepth="2"
                                                              Color="#7B68EE"
                                                              Opacity="0.2"/>
                                        </Border.Effect>
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="Auto"/>
                                                <ColumnDefinition Width="*"/>
                                            </Grid.ColumnDefinitions>

                                            <StackPanel Orientation="Horizontal">
                                                <!-- User Image -->
                                                <Border Width="50"
                                                        Height="50"
                                                        CornerRadius="25"
                                                        ClipToBounds="True">
                                                    <Border.Background>
                                                        <ImageBrush ImageSource="{Binding ImagePath, Converter={StaticResource ImagePathConverter}}"
                                                                    Stretch="UniformToFill"/>
                                                    </Border.Background>
                                                </Border>
                                                <!-- Username and Stats -->
                                                <StackPanel Margin="15,0,0,0">
                                                    <TextBlock Text="{Binding Username}"
                                                               FontSize="16"
                                                               FontWeight="Bold"
                                                               Foreground="White"/>
                                                    <StackPanel Orientation="Horizontal"
                                                                Margin="0,5,0,0">
                                                        <TextBlock Text="Games Won: "
                                                                   FontSize="12"
                                                                   Foreground="#FF9BE8"/>
                                                        <TextBlock Text="{Binding GamesWon}"
                                                                   FontSize="12"
                                                                   Foreground="White"
                                                                   Margin="5,0,15,0"/>
                                                        <TextBlock Text="Best Time: "
                                                                   FontSize="12"
                                                                   Foreground="#FF9BE8"/>
                                                        <TextBlock Text="{Binding BestTime, StringFormat=mm\\:ss}"
                                                                   FontSize="12"
                                                                   Foreground="White"
                                                                   Margin="5,0,15,0"/>
                                                        <TextBlock Text="Avg. Moves: "
                                                                   FontSize="12"
                                                                   Foreground="#FF9BE8"/>
                                                        <TextBlock Text="{Binding AverageMovesPerGame, StringFormat=N1}"
                                                                   FontSize="12"
                                                                   Foreground="White"
                                                                   Margin="5,0,0,0"/>
                                                    </StackPanel>
                                                </StackPanel>
                                            </StackPanel>
                                        </Grid>
                                    </Border>
                                </DataTemplate>
                            </ListBox.ItemTemplate>
                        </ListBox>

                        <!-- Action Buttons -->
                        <StackPanel Grid.Row="2"
                                    Orientation="Horizontal"
                                    HorizontalAlignment="Center">
                            <Button Content="PLAY"
                                    Command="{Binding LoginCommand}"
                                    Width="120"
                                    Height="40">
                                <Button.Style>
                                    <Style TargetType="Button">
                                        <Setter Property="Background">
                                            <Setter.Value>
                                                <LinearGradientBrush StartPoint="0,0"
                                                                     EndPoint="1,1">
                                                    <GradientStop Color="#FF9BE8"
                                                                  Offset="0"/>
                                                    <GradientStop Color="#7B68EE"
                                                                  Offset="1"/>
                                                </LinearGradientBrush>
                                            </Setter.Value>
                                        </Setter>
                                        <Setter Property="Foreground"
                                                Value="White"/>
                                        <Setter Property="FontWeight"
                                                Value="Bold"/>
                                        <Setter Property="Template">
                                            <Setter.Value>
                                                <ControlTemplate TargetType="Button">
                                                    <Border Background="{TemplateBinding Background}"
                                                            CornerRadius="20"
                                                            BorderThickness="0">
                                                        <Border.Effect>
                                                            <DropShadowEffect BlurRadius="10"
                                                                              ShadowDepth="2"
                                                                              Color="#7B68EE"
                                                                              Opacity="0.5"/>
                                                        </Border.Effect>
                                                        <ContentPresenter HorizontalAlignment="Center"
                                                                          VerticalAlignment="Center"/>
                                                    </Border>
                                                </ControlTemplate>
                                            </Setter.Value>
                                        </Setter>
                                        <Style.Triggers>
                                            <Trigger Property="IsMouseOver"
                                                     Value="True">
                                                <Setter Property="Background">
                                                    <Setter.Value>
                                                        <LinearGradientBrush StartPoint="0,0"
                                                                             EndPoint="1,1">
                                                            <GradientStop Color="#7B68EE"
                                                                          Offset="0"/>
                                                            <GradientStop Color="#FF9BE8"
                                                                          Offset="1"/>
                                                        </LinearGradientBrush>
                                                    </Setter.Value>
                                                </Setter>
                                            </Trigger>
                                        </Style.Triggers>
                                    </Style>
                                </Button.Style>
                            </Button>

                            <Button Content="DELETE"
                                    Command="{Binding DeleteUserCommand}"
                                    Width="120"
                                    Height="40">
                                <Button.Style>
                                    <Style TargetType="Button">
                                        <Setter Property="Background"
                                                Value="Transparent"/>
                                        <Setter Property="BorderThickness"
                                                Value="2"/>
                                        <Setter Property="BorderBrush">
                                            <Setter.Value>
                                                <LinearGradientBrush StartPoint="0,0"
                                                                     EndPoint="1,1">
                                                    <GradientStop Color="#FF9BE8"
                                                                  Offset="0"/>
                                                    <GradientStop Color="#7B68EE"
                                                                  Offset="1"/>
                                                </LinearGradientBrush>
                                            </Setter.Value>
                                        </Setter>
                                        <Setter Property="Foreground">
                                            <Setter.Value>
                                                <LinearGradientBrush StartPoint="0,0"
                                                                     EndPoint="1,1">
                                                    <GradientStop Color="#FF9BE8"
                                                                  Offset="0"/>
                                                    <GradientStop Color="#7B68EE"
                                                                  Offset="1"/>
                                                </LinearGradientBrush>
                                            </Setter.Value>
                                        </Setter>
                                        <Setter Property="FontWeight"
                                                Value="Bold"/>
                                        <Setter Property="Template">
                                            <Setter.Value>
                                                <ControlTemplate TargetType="Button">
                                                    <Border Background="{TemplateBinding Background}"
                                                            BorderBrush="{TemplateBinding BorderBrush}"
                                                            BorderThickness="{TemplateBinding BorderThickness}"
                                                            CornerRadius="20">
                                                        <ContentPresenter HorizontalAlignment="Center"
                                                                          VerticalAlignment="Center"/>
                                                    </Border>
                                                </ControlTemplate>
                                            </Setter.Value>
                                        </Setter>
                                        <Style.Triggers>
                                            <Trigger Property="IsMouseOver"
                                                     Value="True">
                                                <Setter Property="Background">
                                                    <Setter.Value>
                                                        <LinearGradientBrush StartPoint="0,0"
                                                                             EndPoint="1,1">
                                                            <GradientStop Color="#7B68EE"
                                                                          Offset="0"/>
                                                            <GradientStop Color="#FF9BE8"
                                                                          Offset="1"/>
                                                        </LinearGradientBrush>
                                                    </Setter.Value>
                                                </Setter>
                                                <Setter Property="Foreground"
                                                        Value="White"/>
                                            </Trigger>
                                        </Style.Triggers>
                                    </Style>
                                </Button.Style>
                            </Button>
                        </StackPanel>
                    </Grid>
                </Border>

                <!-- Separator -->
                <Rectangle Grid.Column="1"
                           Width="1"
                           Margin="10,50"
                           Fill="#7B68EE"
                           Opacity="0.3">
                    <Rectangle.Effect>
                        <BlurEffect Radius="2"/>
                    </Rectangle.Effect>
                </Rectangle>

                <!-- Right Side - Create New User -->
                <Border Grid.Column="2"
                        Background="#1A1A1A"
                        BorderThickness="2"
                        CornerRadius="20"
                        Margin="10">
                    <Border.BorderBrush>
                        <LinearGradientBrush StartPoint="0,0"
                                             EndPoint="1,1">
                            <GradientStop Color="#FF9BE8"
                                          Offset="0"/>
                            <GradientStop Color="#7B68EE"
                                          Offset="1"/>
                        </LinearGradientBrush>
                    </Border.BorderBrush>
                    <Border.Effect>
                        <DropShadowEffect BlurRadius="15"
                                          ShadowDepth="0"
                                          Color="#7B68EE"
                                          Opacity="0.3"/>
                    </Border.Effect>

                    <Grid Margin="20">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <TextBlock Text="CREATE NEW USER"
                                   FontSize="24"
                                   FontWeight="Bold"
                                   HorizontalAlignment="Center"
                                   Margin="0,0,0,20">
                            <TextBlock.Foreground>
                                <LinearGradientBrush StartPoint="0,0"
                                                     EndPoint="1,1">
                                    <GradientStop Color="#FF9BE8"
                                                  Offset="0"/>
                                    <GradientStop Color="#7B68EE"
                                                  Offset="1"/>
                                </LinearGradientBrush>
                            </TextBlock.Foreground>
                        </TextBlock>

                        <!-- Username Input -->
                        <TextBox Grid.Row="1"
                                 Text="{Binding NewUser, UpdateSourceTrigger=PropertyChanged}"
                                 Height="40"
                                 FontSize="16"
                                 Margin="0,0,0,15"
                                 Background="#2D2D2D"
                                 Foreground="White"
                                 BorderThickness="2"
                                 Padding="10,8">
                            <TextBox.Resources>
                                <Style TargetType="Border">
                                    <Setter Property="CornerRadius"
                                            Value="10"/>
                                </Style>
                            </TextBox.Resources>
                            <TextBox.BorderBrush>
                                <LinearGradientBrush StartPoint="0,0"
                                                     EndPoint="1,1">
                                    <GradientStop Color="#FF9BE8"
                                                  Offset="0"/>
                                    <GradientStop Color="#7B68EE"
                                                  Offset="1"/>
                                </LinearGradientBrush>
                            </TextBox.BorderBrush>
                        </TextBox>

                        <!-- Image Selection -->
                        <Grid Grid.Row="2"
                              Margin="0,0,0,15">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <TextBox Text="{Binding NewUserImage, UpdateSourceTrigger=PropertyChanged}"
                                     IsReadOnly="True"
                                     Height="40"
                                     FontSize="16"
                                     Margin="0,0,10,0"
                                     Background="#2D2D2D"
                                     Foreground="White"
                                     BorderThickness="2"
                                     Padding="10,8">
                                <TextBox.Resources>
                                    <Style TargetType="Border">
                                        <Setter Property="CornerRadius"
                                                Value="10"/>
                                    </Style>
                                </TextBox.Resources>
                                <TextBox.BorderBrush>
                                    <LinearGradientBrush StartPoint="0,0"
                                                         EndPoint="1,1">
                                        <GradientStop Color="#FF9BE8"
                                                      Offset="0"/>
                                        <GradientStop Color="#7B68EE"
                                                      Offset="1"/>
                                    </LinearGradientBrush>
                                </TextBox.BorderBrush>
                            </TextBox>

                            <Button Grid.Column="1"
                                    Content="BROWSE"
                                    Command="{Binding BrowseImageCommand}"
                                    Width="100"
                                    Height="40">
                                <Button.Style>
                                    <Style TargetType="Button">
                                        <Setter Property="Background"
                                                Value="Transparent"/>
                                        <Setter Property="BorderThickness"
                                                Value="2"/>
                                        <Setter Property="BorderBrush">
                                            <Setter.Value>
                                                <LinearGradientBrush StartPoint="0,0"
                                                                     EndPoint="1,1">
                                                    <GradientStop Color="#FF9BE8"
                                                                  Offset="0"/>
                                                    <GradientStop Color="#7B68EE"
                                                                  Offset="1"/>
                                                </LinearGradientBrush>
                                            </Setter.Value>
                                        </Setter>
                                        <Setter Property="Foreground">
                                            <Setter.Value>
                                                <LinearGradientBrush StartPoint="0,0"
                                                                     EndPoint="1,1">
                                                    <GradientStop Color="#FF9BE8"
                                                                  Offset="0"/>
                                                    <GradientStop Color="#7B68EE"
                                                                  Offset="1"/>
                                                </LinearGradientBrush>
                                            </Setter.Value>
                                        </Setter>
                                        <Setter Property="FontWeight"
                                                Value="Bold"/>
                                        <Setter Property="Template">
                                            <Setter.Value>
                                                <ControlTemplate TargetType="Button">
                                                    <Border Background="{TemplateBinding Background}"
                                                            BorderBrush="{TemplateBinding BorderBrush}"
                                                            BorderThickness="{TemplateBinding BorderThickness}"
                                                            CornerRadius="20">
                                                        <ContentPresenter HorizontalAlignment="Center"
                                                                          VerticalAlignment="Center"/>
                                                    </Border>
                                                </ControlTemplate>
                                            </Setter.Value>
                                        </Setter>
                                        <Style.Triggers>
                                            <Trigger Property="IsMouseOver"
                                                     Value="True">
                                                <Setter Property="Background">
                                                    <Setter.Value>
                                                        <LinearGradientBrush StartPoint="0,0"
                                                                             EndPoint="1,1">
                                                            <GradientStop Color="#7B68EE"
                                                                          Offset="0"/>
                                                            <GradientStop Color="#FF9BE8"
                                                                          Offset="1"/>
                                                        </LinearGradientBrush>
                                                    </Setter.Value>
                                                </Setter>
                                                <Setter Property="Foreground"
                                                        Value="White"/>
                                            </Trigger>
                                        </Style.Triggers>
                                    </Style>
                                </Button.Style>
                            </Button>
                        </Grid>

                        <!-- Image Preview -->
                        <Border Grid.Row="3"
                                Background="#2D2D2D"
                                CornerRadius="10"
                                Margin="0,0,0,15">
                            <Border.Effect>
                                <DropShadowEffect BlurRadius="10"
                                                  ShadowDepth="0"
                                                  Color="#7B68EE"
                                                  Opacity="0.3"/>
                            </Border.Effect>
                            <Image Source="{Binding NewUserImage}"
                                   Stretch="Uniform"
                                   Margin="10"/>
                        </Border>

                        <!-- Create Button -->
                        <Button Grid.Row="4"
                                Content="CREATE USER"
                                Command="{Binding CreateUserCommand}"
                                Height="45"
                                FontSize="18"
                                FontWeight="Bold">
                            <Button.Style>
                                <Style TargetType="Button">
                                    <Setter Property="Background">
                                        <Setter.Value>
                                            <LinearGradientBrush StartPoint="0,0"
                                                                 EndPoint="1,1">
                                                <GradientStop Color="#FF9BE8"
                                                              Offset="0"/>
                                                <GradientStop Color="#7B68EE"
                                                              Offset="1"/>
                                            </LinearGradientBrush>
                                        </Setter.Value>
                                    </Setter>
                                    <Setter Property="Foreground"
                                            Value="White"/>
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="Button">
                                                <Border Background="{TemplateBinding Background}"
                                                        CornerRadius="22"
                                                        BorderThickness="0">
                                                    <Border.Effect>
                                                        <DropShadowEffect BlurRadius="10"
                                                                          ShadowDepth="2"
                                                                          Color="#7B68EE"
                                                                          Opacity="0.5"/>
                                                    </Border.Effect>
                                                    <ContentPresenter HorizontalAlignment="Center"
                                                                      VerticalAlignment="Center"/>
                                                </Border>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                    <Style.Triggers>
                                        <Trigger Property="IsMouseOver"
                                                 Value="True">
                                            <Setter Property="Background">
                                                <Setter.Value>
                                                    <LinearGradientBrush StartPoint="0,0"
                                                                         EndPoint="1,1">
                                                        <GradientStop Color="#7B68EE"
                                                                      Offset="0"/>
                                                        <GradientStop Color="#FF9BE8"
                                                                      Offset="1"/>
                                                    </LinearGradientBrush>
                                                </Setter.Value>
                                            </Setter>
                                        </Trigger>
                                    </Style.Triggers>
                                </Style>
                            </Button.Style>
                        </Button>
                    </Grid>
                </Border>
            </Grid>
        </Grid>
    </Grid>
</UserControl>