<UserControl x:Class="Memory_Game.View.LoginView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:Memory_Game.View"
             xmlns:viewModel="clr-namespace:Memory_Game.ViewModel"
             mc:Ignorable="d"
             d:DesignHeight="600" d:DesignWidth="800">

    <UserControl.DataContext>
        <viewModel:LoginViewModel/>
    </UserControl.DataContext>

    <UserControl.Resources>
        <!-- Modern Button Style -->
        <Style x:Key="ModernButton" TargetType="Button">
            <Setter Property="Background" Value="#FF007ACC"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Padding" Value="20,10"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="5">
                            <ContentPresenter HorizontalAlignment="Center" 
                                            VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#FF5C2D91"/>
                </Trigger>
                <Trigger Property="IsEnabled" Value="False">
                    <Setter Property="Background" Value="#FF666666"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Modern TextBox Style -->
        <Style x:Key="ModernTextBox" TargetType="TextBox">
            <Setter Property="Background" Value="#FF2D2D2D"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="10,5"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="5"
                                BorderThickness="1"
                                BorderBrush="#FF007ACC">
                            <ScrollViewer x:Name="PART_ContentHost"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Modern ListBox Style -->
        <Style x:Key="ModernListBox" TargetType="ListBox">
            <Setter Property="Background" Value="#FF2D2D2D"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="BorderBrush" Value="#FF007ACC"/>
            <Setter Property="Padding" Value="5"/>
        </Style>

        <!-- Modern GroupBox Style -->
        <Style x:Key="ModernGroupBox" TargetType="GroupBox">
            <Setter Property="BorderBrush" Value="#FF007ACC"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="10"/>
            <Setter Property="HeaderTemplate">
                <Setter.Value>
                    <DataTemplate>
                        <TextBlock Text="{Binding}"
                                 Foreground="White"
                                 FontSize="16"
                                 FontWeight="Bold"
                                 Margin="5"/>
                    </DataTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </UserControl.Resources>

    <Grid>
        <Grid.Background>
            <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                <GradientStop Color="#FF1E1E1E" Offset="0"/>
                <GradientStop Color="#FF2D2D2D" Offset="1"/>
            </LinearGradientBrush>
        </Grid.Background>

        <Grid Margin="20">
            <Grid.Effect>
                <DropShadowEffect BlurRadius="15" 
                                 ShadowDepth="0" 
                                 Color="#FF007ACC" 
                                 Opacity="0.3"/>
            </Grid.Effect>

            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Title with glow effect -->
            <TextBlock Text="MEMORY GAME"
                       FontSize="36"
                       FontWeight="Bold"
                       Foreground="White"
                       HorizontalAlignment="Center"
                       Margin="0,0,0,30">
                <TextBlock.Effect>
                    <DropShadowEffect BlurRadius="20"
                                     ShadowDepth="0"
                                     Color="#FF007ACC"/>
                </TextBlock.Effect>
            </TextBlock>

            <!-- Main Content -->
            <Grid Grid.Row="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- Left Side - Existing Users -->
                <GroupBox Header="SELECT USER" 
                          Style="{StaticResource ModernGroupBox}"
                          Margin="10">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <!-- User List -->
                        <ListBox Style="{StaticResource ModernListBox}"
                                 ItemsSource="{Binding Users}"
                                 SelectedItem="{Binding SelectedUser}"
                                 Margin="5">
                            <ListBox.ItemTemplate>
                                <DataTemplate>
                                    <Border Background="#FF333333"
                                            CornerRadius="5"
                                            Padding="10">
                                        <StackPanel Orientation="Horizontal">
                                            <!-- User Image -->
                                            <Border Width="50" 
                                                    Height="50" 
                                                    CornerRadius="25"
                                                    ClipToBounds="True">
                                                <Border.Background>
                                                    <ImageBrush ImageSource="{Binding ImagePath}"
                                                               Stretch="UniformToFill"/>
                                                </Border.Background>
                                            </Border>
                                            <!-- Username -->
                                            <TextBlock Text="{Binding Username}"
                                                       VerticalAlignment="Center"
                                                       Margin="15,0,0,0"
                                                       FontSize="16"
                                                       Foreground="White"/>
                                        </StackPanel>
                                    </Border>
                                </DataTemplate>
                            </ListBox.ItemTemplate>
                        </ListBox>

                        <!-- Action Buttons -->
                        <StackPanel Grid.Row="1" 
                                  Orientation="Horizontal"
                                  HorizontalAlignment="Center"
                                  Margin="0,10,0,0">
                            <Button Content="PLAY"
                                    Style="{StaticResource ModernButton}"
                                    Command="{Binding LoginCommand}"
                                    Width="100"/>
                            <Button Content="DELETE"
                                    Style="{StaticResource ModernButton}"
                                    Command="{Binding DeleteUserCommand}"
                                    Width="100"/>
                        </StackPanel>
                    </Grid>
                </GroupBox>

                <!-- Separator -->
                <Rectangle Grid.Column="1" 
                           Width="1" 
                           Margin="10,0"
                           Fill="#FF007ACC">
                    <Rectangle.Effect>
                        <BlurEffect Radius="2"/>
                    </Rectangle.Effect>
                </Rectangle>

                <!-- Right Side - Create New User -->
                <GroupBox Grid.Column="2"
                          Header="CREATE NEW USER"
                          Style="{StaticResource ModernGroupBox}"
                          Margin="10">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <!-- Username Input -->
                        <StackPanel Grid.Row="0" Margin="5">
                            <TextBlock Text="USERNAME"
                                       Foreground="White"
                                       FontWeight="Bold"
                                       Margin="0,0,0,5"/>
                            <TextBox Style="{StaticResource ModernTextBox}"
                                     Text="{Binding NewUser, UpdateSourceTrigger=PropertyChanged}"/>
                        </StackPanel>

                        <!-- Image Selection -->
                        <StackPanel Grid.Row="1" Margin="5,15,5,5">
                            <TextBlock Text="PROFILE IMAGE"
                                       Foreground="White"
                                       FontWeight="Bold"
                                       Margin="0,0,0,5"/>
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <TextBox Style="{StaticResource ModernTextBox}"
                                         Text="{Binding NewUserImage, UpdateSourceTrigger=PropertyChanged}"
                                         IsReadOnly="True"/>
                                <Button Grid.Column="1"
                                        Content="BROWSE"
                                        Command="{Binding BrowseImageCommand}"
                                        Style="{StaticResource ModernButton}"
                                        Width="100"
                                        Margin="5,0,0,0"/>
                            </Grid>
                        </StackPanel>

                        <!-- Image Preview -->
                        <Border Grid.Row="2" 
                                Background="#FF2D2D2D"
                                BorderBrush="#FF007ACC"
                                BorderThickness="1"
                                CornerRadius="5"
                                Margin="5,15">
                            <Border.Effect>
                                <DropShadowEffect BlurRadius="10"
                                                 ShadowDepth="0"
                                                 Color="#FF007ACC"
                                                 Opacity="0.3"/>
                            </Border.Effect>
                            <Image Source="{Binding NewUserImage}"
                                   Stretch="Uniform"
                                   Margin="10"/>
                        </Border>

                        <!-- Create Button -->
                        <Button Grid.Row="3"
                                Content="CREATE USER"
                                Style="{StaticResource ModernButton}"
                                Command="{Binding CreateUserCommand}"
                                HorizontalAlignment="Center"
                                Width="150"
                                Height="40"
                                Margin="5,15"/>
                    </Grid>
                </GroupBox>
            </Grid>
        </Grid>
    </Grid>
</UserControl>