<?xml version="1.0" encoding="utf-8" ?>
<Window x:Class="Memory_Game.View.BoardSizeDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Memory_Game.View"
        x:Name="BoardSizeDialogWindow"
        mc:Ignorable="d"
        Title="Custom Board Size"
        Height="300"
        Width="400"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        Background="#FF1E1E1E">

        <Window.Resources>
                <!-- Modern Slider Style -->
                <Style x:Key="ModernSlider"
                       TargetType="Slider">
                        <Setter Property="Margin"
                                Value="10,5"/>
                        <Setter Property="Foreground"
                                Value="#FF007ACC"/>
                        <Setter Property="Background"
                                Value="#FF2D2D2D"/>
                        <Style.Triggers>
                                <Trigger Property="IsMouseOver"
                                         Value="True">
                                        <Setter Property="Foreground"
                                                Value="#FF00BFFF"/>
                                </Trigger>
                        </Style.Triggers>
                </Style>

                <!-- Modern TextBlock Style -->
                <Style x:Key="ModernTextBlock"
                       TargetType="TextBlock">
                        <Setter Property="Foreground"
                                Value="White"/>
                        <Setter Property="FontSize"
                                Value="16"/>
                        <Setter Property="VerticalAlignment"
                                Value="Center"/>
                        <Setter Property="Margin"
                                Value="0,5"/>
                </Style>

                <!-- Modern Button Style -->
                <Style x:Key="ModernButton"
                       TargetType="Button">
                        <Setter Property="Background"
                                Value="#FF007ACC"/>
                        <Setter Property="Foreground"
                                Value="White"/>
                        <Setter Property="Padding"
                                Value="20,10"/>
                        <Setter Property="Margin"
                                Value="10"/>
                        <Setter Property="BorderThickness"
                                Value="0"/>
                        <Setter Property="FontSize"
                                Value="14"/>
                        <Setter Property="Template">
                                <Setter.Value>
                                        <ControlTemplate TargetType="Button">
                                                <Border Background="{TemplateBinding Background}"
                                                        CornerRadius="4">
                                                        <ContentPresenter HorizontalAlignment="Center"
                                                                          VerticalAlignment="Center"/>
                                                </Border>
                                        </ControlTemplate>
                                </Setter.Value>
                        </Setter>
                        <Style.Triggers>
                                <Trigger Property="IsMouseOver"
                                         Value="True">
                                        <Setter Property="Background"
                                                Value="#FF00BFFF"/>
                                </Trigger>
                                <Trigger Property="IsEnabled"
                                         Value="False">
                                        <Setter Property="Background"
                                                Value="#FF666666"/>
                                </Trigger>
                        </Style.Triggers>
                </Style>
        </Window.Resources>

        <Grid Margin="20">
                <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!-- Title -->
                <TextBlock Text="Custom Board Size"
                           FontSize="28"
                           FontWeight="Bold"
                           Foreground="White"
                           HorizontalAlignment="Center"
                           Margin="0,0,0,20">
                        <TextBlock.Effect>
                                <DropShadowEffect BlurRadius="20"
                                                  ShadowDepth="0"
                                                  Color="#FF007ACC"/>
                        </TextBlock.Effect>
                </TextBlock>

                <!-- Sliders -->
                <StackPanel Grid.Row="1"
                            Margin="0,10,0,20">
                        <!-- Width Slider -->
                        <DockPanel LastChildFill="True">
                                <TextBlock Text="Width:"
                                           Style="{StaticResource ModernTextBlock}"
                                           Width="60"/>
                                <TextBlock Text="{Binding Value, ElementName=WidthSlider}"
                                           Style="{StaticResource ModernTextBlock}"
                                           Width="30"
                                           TextAlignment="Right"
                                           DockPanel.Dock="Right"/>
                                <Slider x:Name="WidthSlider"
                                        Style="{StaticResource ModernSlider}"
                                        Minimum="2"
                                        Maximum="6"
                                        Value="4"
                                        IsSnapToTickEnabled="True"
                                        TickFrequency="1"/>
                        </DockPanel>

                        <!-- Height Slider -->
                        <DockPanel LastChildFill="True">
                                <TextBlock Text="Height:"
                                           Style="{StaticResource ModernTextBlock}"
                                           Width="60"/>
                                <TextBlock Text="{Binding Value, ElementName=HeightSlider}"
                                           Style="{StaticResource ModernTextBlock}"
                                           Width="30"
                                           TextAlignment="Right"
                                           DockPanel.Dock="Right"/>
                                <Slider x:Name="HeightSlider"
                                        Style="{StaticResource ModernSlider}"
                                        Minimum="2"
                                        Maximum="6"
                                        Value="4"
                                        IsSnapToTickEnabled="True"
                                        TickFrequency="1"/>
                        </DockPanel>
                </StackPanel>

                <!-- Buttons -->
                <StackPanel Grid.Row="2"
                            Orientation="Horizontal"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            Margin="0,20,0,0">
                        <Button Content="Apply"
                                x:Name="OkButton"
                                Click="OkButton_Click"
                                Style="{StaticResource ModernButton}"
                                Width="120"/>
                        <Button Content="Cancel"
                                x:Name="CancelButton"
                                Click="CancelButton_Click"
                                Style="{StaticResource ModernButton}"
                                Width="120"/>
                </StackPanel>
        </Grid>
</Window> 